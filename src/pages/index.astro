---
// src/pages/index.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import ReviewCard from '../components/ReviewCard.astro'; // ¡Importa el nuevo componente ReviewCard!
const allReviews = await Astro.glob('./reviews/*.mdx');
---
<BaseLayout title="Inicio - Tu Sitio de Reseñas Tech" description="...">
  <main>
    <h1>¡Bienvenido a Mi Sitio de Reseñas Tech!</h1>
    <p>Aquí encontrarás las reseñas más detalladas...</p>

    <h2>Últimas Reseñas</h2>

    <div class="reviews-grid">
      {/* 2. Recorre el array de reseñas y renderiza una tarjeta para cada una */}
      {allReviews.map(review => (
        <ReviewCard
          title={review.frontmatter.title}
          image={review.frontmatter.product_image}
          link={review.url}
          description={review.frontmatter.description}
        />
      ))}
    </div>
  </main>
</BaseLayout>