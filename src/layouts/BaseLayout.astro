---
// Este es el "frontmatter" de Astro, donde puedes importar scripts o definir variables.
// En este caso, definimos propiedades que el componente que usa este layout puede pasar.
export interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Tu sitio de reseñas de tecnología.' } = Astro.props as Props;
---
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} | Mi Sitio de Reseñas Tech</title>
  <meta name="description" content={description} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <style is:global>
    body {
      font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
      color: #333;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    header {
      background: #23272f;
      color: #fff;
      padding: 22px 0 10px 0;
      text-align: center;
      border-bottom: 3px solid #3498db;
      box-shadow: 0 2px 12px rgba(44,62,80,0.10);
      border-radius: 0 0 18px 18px;
    }
    header h1 {
      margin: 0;
      font-size: 2.1em;
      letter-spacing: 1px;
      font-weight: 700;
      color: #fff;
      text-shadow: 0 2px 8px rgba(44,62,80,0.10);
    }
    header nav {
      margin-top: 14px;
    }
    header nav a {
      color: #9ad1ff;
      margin: 0 18px;
      font-weight: 500;
      font-size: 1.08em;
      letter-spacing: 0.2px;
      padding: 6px 10px 6px 10px;
      border-radius: 6px;
      border-bottom: 2px solid transparent;
      transition: 
        border 0.2s,
        background 0.2s,
        color 0.2s;
      display: inline-block;
    }
    header nav a:hover {
      border-bottom: 2px solid #3498db;
      background: #2c3e50;
      color: #fff;
    }
    main {
      max-width: 900px;
      margin: 32px auto 40px auto;
      padding: 32px 24px;
      background-color: #fff;
      border-radius: 14px;
      box-shadow: 0 4px 16px rgba(44,62,80,0.08);
      flex: 1;
    }
    h1, h2, h3 {
      color: #2c3e50;
      letter-spacing: 0.5px;
    }
    a {
      color: #3498db;
      text-decoration: none;
      transition: color 0.2s;
    }
    a:hover {
      color: #217dbb;
      text-decoration: underline;
    }
    footer {
      background: #23272f;
      color: #e0e0e0;
      text-align: center;
      padding: 28px 0 18px 0;
      margin-top: auto;
      font-size: 1em;
      border-top: 3px solid #3498db;
      box-shadow: 0 -2px 12px rgba(44,62,80,0.10);
      border-radius: 18px 18px 0 0;
    }
    footer nav {
      margin-bottom: 10px;
    }
    footer nav a {
      color: #9ad1ff;
      margin: 0 14px;
      font-weight: 500;
      font-size: 1em;
      padding: 6px 10px;
      border-radius: 6px;
      transition: 
        background 0.2s,
        color 0.2s;
      display: inline-block;
    }
    footer nav a:hover {
      background: #3498db;
      color: #fff;
      text-decoration: none;
    }
    footer p {
      margin: 12px 0 0 0;
      font-size: 0.98em;
      color: #b0b8c1;
    }
    @media (max-width: 600px) {
      main {
        padding: 12px 4vw;
      }
      header, footer {
        padding-left: 0;
        padding-right: 0;
        border-radius: 0;
      }
      header nav a, footer nav a {
        margin: 0 6px;
        font-size: 0.98em;
      }
    }
  </style>
</head>
<body>
  <header>
    <h1>ZonaTech</h1>
    <nav>
      <a href="/">🏠 Inicio</a>
      <a href="/reviews/motoG54">📝 Reseña Ejemplo</a>
    </nav>
  </header>
  <main>
    <slot />
  </main>
  <footer>
    <nav>
      <a href="/acerca-de">👤 Acerca de Nosotros</a>
      <a href="/contacto">✉️ Contacto</a>
      <a href="/politica-de-privacidad">🔒 Política de Privacidad</a>
    </nav>
    <p>&copy; {new Date().getFullYear()} Mi Sitio de Reseñas Tech. Todos los derechos reservados.</p>
  </footer>
</body>
</html>